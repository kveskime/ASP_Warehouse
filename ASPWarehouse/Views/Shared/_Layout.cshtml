@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700,400italic|Raleway:500,600,700">
    <link rel="stylesheet" media="screen" href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,700">



    @Styles.Render("~/Content/main.css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/bootstrap-theme.css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @RenderSection("Styles", required: false)
</head>
<body class="home">
    <div class="navbar navbar-inverse navbar-fixed-top headroom">
        <div class="container">
            <div class="navbar-header">
                <!-- Button for smallest screens -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                <a href="@Url.Action("Index", "Home", null)">
                    <img src="~/images/logo.png" style="background-color: white; height: 52px">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                        <li>@Html.ActionLink("Products", "Index", "Products")</li>
                        <li>@Html.ActionLink("Purchases", "Index", "Purchases")</li>
                        <li>@Html.ActionLink("Account", "Login", "Account")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">More Pages <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Forgot pw", "ForgotPassword", "Account")</li>
                                <li>@Html.ActionLink("Register", "Register", "Account")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>

                    <li>@Html.Partial("_LoginPartial")</li>
                   </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
        <div class="container">
        </div>
    </div>
<div class="home">
    <br />
    <br />
    <br />
    <br />

    @RenderBody()
    <hr/>
    <footer>
        <p>
            &copy; @DateTime.Now.Year - My ASP.NET Application (Culture:<b>@Culture</b> UICulture:<b>@UICulture</b>)
        </p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/html5shiv")
    @Scripts.Render("~/bundles/headroom")
    @Scripts.Render("~bundles/headroom-jQuery")
    @Scripts.Render("~bundles/template")






    @RenderSection("scripts", required: false)
</body>
</html>
